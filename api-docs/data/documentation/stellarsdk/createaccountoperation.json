"},{"type":"text","text":" "},{"type":"text","text":"required for each trustline, offer, signer, or data entry added to the account."}],"type":"paragraph"},{"inlineContent":[{"type":"text","text":"The operation will fail if:"}],"type":"paragraph"},{"type":"unorderedList","items":[{"content":[{"type":"paragraph","inlineContent":[{"text":"The destination account already exists","type":"text"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"The starting balance is below the minimum reserve requirement"}]}]},{"content":[{"inlineContent":[{"type":"text","text":"The source account has insufficient XLM balance"}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"text":"The destination account ID is invalid","type":"text"}]}]}]},{"inlineContent":[{"text":"Example:","type":"text"}],"type":"paragraph"},{"syntax":"swift","code":["\/\/ Create and fund a new account with 10 XLM","let newKeyPair = try KeyPair.generateRandomKeyPair()","let createAccount = CreateAccountOperation(","    sourceAccountId: nil,","    destination: newKeyPair,","    startBalance: 10.0",")","","\/\/ Or using an existing account ID","let createAccount2 = try CreateAccountOperation(","    sourceAccountId: nil,","    destinationAccountId: \"GNEW...\",","    startBalance: 10.0",")"],"type":"codeListing"},{"inlineContent":[{"type":"text","text":"See also:"}],"type":"paragraph"},{"type":"unorderedList","items":[{"content":[{"type":"paragraph","inlineContent":[{"type":"reference","identifier":"https:\/\/developers.stellar.org","isActive":true}]}]}]}]}],"variants":[{"traits":[{"interfaceLanguage":"swift"}],"paths":["\/documentation\/stellarsdk\/createaccountoperation"]}],"schemaVersion":{"patch":0,"major":0,"minor":3},"topicSections":[{"title":"Initializers","anchor":"Initializers","generated":true,"identifiers":["doc:\/\/stellar-ios-mac-sdk.stellarsdk\/documentation\/stellarsdk\/CreateAccountOperation\/init(fromXDR:sourceAccountId:)","doc:\/\/stellar-ios-mac-sdk